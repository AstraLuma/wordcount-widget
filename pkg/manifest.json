{
	"manifest_version": 2,
	"name": "Word Count Tracker",
	"version": "0.1",
	"author": "Jamie Bliss",
	"description": "Tracks your word count across multiple projects.",
	"icons": {
		"100": "icon100.png",
		"128": "icon128.png",
		"48": "icon48.png",
		"16": "icon16.png"
	},
	"permissions": [
		"storage"
	],
	"browser_action": {
		"default_icon": {
			"19": "icon19.png",
			"38": "icon38.png"
		},
		"default_title": "Word Count Tracker",
		"default_popup": "wordcount.html"
	}
}
